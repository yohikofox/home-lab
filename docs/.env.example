# Configuration Home Lab - Template
# Copiez ce fichier vers .env et adaptez les valeurs à votre environnement

# =======================
# DOMAINE ET RÉSEAU
# =======================
# Votre domaine principal (ex: votredomaine.fr, monlab.local)
HOMELAB_DOMAIN=homelab.local

# Sous-domaines pour les services
VAULTWARDEN_SUBDOMAIN=vault
ZITADEL_SUBDOMAIN=auth
SNIPEIT_SUBDOMAIN=assets
OCTOPRINT_SUBDOMAIN=print
PIHOLE_SUBDOMAIN=pi
PORTAINER_SUBDOMAIN=portainer
NPM_SUBDOMAIN=npm
N8N_SUBDOMAIN=n8n
NETDATA_SUBDOMAIN=monitoring
DOCS_SUBDOMAIN=docs

# Configuration réseau
NETWORK_SUBNET=192.168.1.0/24
DOCKER_HOST_IP=192.168.1.101
HOMEASSISTANT_IP=192.168.1.100
ROUTER_IP=192.168.1.1

# DNS upstream
PRIMARY_DNS=1.1.1.1
SECONDARY_DNS=1.0.0.1

# =======================
# MACHINES
# =======================
# Hostnames des machines
DOCKER_HOST_HOSTNAME=docker-host
HOMEASSISTANT_HOSTNAME=homeassistant-pi
ROUTER_HOSTNAME=router

# Utilisateur SSH
SSH_USER=homelab

# =======================
# SÉCURITÉ
# =======================
# Email pour les certificats SSL
SSL_EMAIL=admin@${HOMELAB_DOMAIN}

# Répertoire de stockage des secrets
SECRETS_DIR=/home/${SSH_USER}/.homelab/secrets

# =======================
# SERVICES - PORTS
# =======================
PORTAINER_PORT=9000
NPM_ADMIN_PORT=81
NETDATA_PORT=19999
N8N_PORT=5678
HOMEASSISTANT_PORT=8123
PIHOLE_PORT=53

# =======================
# AUTOMATISATIONS
# =======================
# Configuration N8N/Telegram (optionnel)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID_HERE

# Configuration email (optionnel)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@${HOMELAB_DOMAIN}
SMTP_PASSWORD=YOUR_SMTP_PASSWORD_HERE

# =======================
# STOCKAGE ET BACKUPS
# =======================
# Répertoires de stockage
DOCKER_DATA_DIR=/opt/docker-data
BACKUP_DIR=/opt/backups
LOGS_DIR=/var/log/homelab

# Configuration cloud backup (optionnel)
S3_BUCKET=homelab-backups
S3_REGION=eu-west-1
S3_ACCESS_KEY=YOUR_S3_ACCESS_KEY_HERE
S3_SECRET_KEY=YOUR_S3_SECRET_KEY_HERE